[36m@@ -0,0 +1,40 @@[m
[32m+[m[32mimport cookieParser from 'cookie-parser';[m
[32m+[m[32mimport cors from 'cors';[m
[32m+[m[32mimport express from 'express';[m
[32m+[m[32mimport helmet from 'helmet';[m
[32m+[m[32mimport logger from 'morgan';[m
[32m+[m
[32m+[m[32mimport globalErrorHandler from './controllers/errorController.js';[m
[32m+[m[32mimport router from './routes/index.js';[m
[32m+[m[32mimport AppError from './utils/appError.js';[m
[32m+[m
[32m+[m[32m// const cloudinary = require('cloudinary').v2;[m
[32m+[m[32mconst app = express();[m
[32m+[m
[32m+[m[32mconst options = [[m
[32m+[m[32m    cors({[m
[32m+[m[32m        origin: '*',[m
[32m+[m[32m    }),[m
[32m+[m[32m    logger('tiny'),[m
[32m+[m[32m    helmet(),[m
[32m+[m[32m    express.json({ limit: '30mb' }),[m
[32m+[m[32m    cookieParser(),[m
[32m+[m[32m];[m
[32m+[m[32mapp.use(options);[m
[32m+[m
[32m+[m[32mapp.get('/', (req, res) =>[m
[32m+[m[32m    res.json({[m
[32m+[m[32m        status: 'success',[m
[32m+[m[32m        message: 'Server is running wow!',[m
[32m+[m[32m    })[m
[32m+[m[32m);[m
[32m+[m
[32m+[m[32mapp.use('/api/v1', router);[m
[32m+[m
[32m+[m[32mapp.all('*', (req, res, next) => {[m
[32m+[m[32m    next(new AppError(`cannot find ${req.originalUrl} on this server!`, 404));[m
[32m+[m[32m});[m
[32m+[m
[32m+[m[32mapp.use(globalErrorHandler);[m
[32m+[m
[32m+[m[32mexport default app;[m
